{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "tsconfig/react.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["node", "@svgr/webpack"],
    "incremental": true,
    "jsx": "preserve"
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
